<h1>Listing Questions</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.name, question_path(question), class: "question" %></td>
        <td><%= question.topic.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<%= link_to 'Add New Question', new_question_path %> 
