 <%= form_with scope: :question, url: questions_path, local: true do |form| %>
  <p>
    <%= form.label :topic %><br>
    <%= form.select( "topic_id", Question.all.collect {|q| [q.name, q.id]}, { include_blank: true })  %>
  </p>
  
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', questions_path %>